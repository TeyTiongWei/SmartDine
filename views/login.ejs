        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3 text-center">
                <h1 class="text-primary fw-bold">SmartDine</h1>
                <h4 class="fw-bold">Admin Login</h2>
                <p class="text-secondary">Login to access the reservation system</p>
            </div>
            <div class="mb-3">
                <label for="username" class="form-label fw-medium">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter Your Username" required autofocus>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter your username.
                    </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label fw-medium">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter Your Password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter your password.
                    </div>
            </div>
            <% if (error && error.length > 0) { %>
                <p class="text-danger text-center fw-semibold mb-3">
                    <%= error %>
                </p>
            <% } %>
            <div class="mb-3 text-center">
                <p class="text-secondary">Dont have an account? <a href="/register">Register here!</a></p>
            </div>
            <button class="btn btn-primary btn-lg w-100 mb-3 fw-semibold" type="submit">Login</button>
        </form>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
